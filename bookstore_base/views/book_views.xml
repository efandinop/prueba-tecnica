<odoo>
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">bookstore.book.form</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <form string="Libro">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="author_id"/>
                        <field name="publication_year"/>
                        <field name="price"/>
                        <field name="stock"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>