<odoo>
    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">bookstore.customer.form</field>
        <field name="model">bookstore.customer</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="purchase_history" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>